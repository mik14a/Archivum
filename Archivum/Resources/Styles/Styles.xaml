<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:font="clr-namespace:Archivum.Resources.Fonts">

    <OnIdiom
        x:Key="IconSize"
        x:TypeArguments="x:Double"
        Default="20">
        <OnIdiom.Desktop>32</OnIdiom.Desktop>
    </OnIdiom>

    <FontImageSource
        x:Key="IconPreviousFrame"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.arrow_right_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconNextFrame"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.arrow_left_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconPreviousPage"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.image_arrow_forward_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconNextPage"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.image_arrow_back_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconSinglePage"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.image_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconSpreadPage"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.image_multiple_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconClose"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.dismiss_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconLibrary"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.book_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconPeople"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.people_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconCollection"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.library_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconSettings"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.settings_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconProperties"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.info_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />
    <FontImageSource
        x:Key="IconRefresh"
        FontFamily="{x:Static font:FluentUI.FontFamily}"
        Glyph="{x:Static font:FluentUI.arrow_sync_24_regular}"
        Size="{StaticResource IconSize}"
        Color="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                Dark={StaticResource LightOnDarkBackground}}" />

</ResourceDictionary>
