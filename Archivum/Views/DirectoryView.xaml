<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="Archivum.Views.DirectoryView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Archivum.ViewModels"
    x:DataType="viewmodel:MangaViewModel">
    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
    </Grid.RowDefinitions>
    <Label Grid.Row="0" Text="{Binding Author}" />
    <Label Grid.Row="1" Text="{Binding Title}" />
    <Label Grid.Row="2" Text="{Binding Volume}" />
    <Label Grid.Row="3" Text="{Binding Created}" />
    <Label Grid.Row="4" Text="{Binding Modified}" />
</Grid>
