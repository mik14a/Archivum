<?xml version="1.0" encoding="utf-8" ?>
<controls:Shell
    x:Class="Archivum.AppShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Archivum.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Archivum"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            x:Name="_AppTitleBar"
            Height="{Binding ElementName=_NavigationView, Path=CompactPaneLength}"
            Margin="48,0,0,0"
            VerticalAlignment="Stretch"
            AutomationProperties.AutomationId="AppTitleBar"
            Canvas.ZIndex="1"
            IsHitTestVisible="True">
            <TextBlock
                Margin="12,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Archivum" />
        </Border>

        <NavigationView
            x:Name="_NavigationView"
            Grid.RowSpan="2"
            IsBackButtonVisible="Collapsed"
            IsTabStop="False"
            PaneDisplayMode="Auto"
            SelectionChanged="NavigationViewSelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="ホーム"
                    Icon="{ui:FontIcon Glyph=&#xE80F;}"
                    Tag="HomePage" />
                <NavigationViewItem
                    Content="マンガ"
                    Icon="{ui:FontIcon Glyph=&#xE82D;}"
                    Tag="MangasPage" />
                <NavigationViewItem
                    Content="作者一覧"
                    Icon="{ui:FontIcon Glyph=&#xE716;}"
                    Tag="AuthorsPage" />
                <NavigationViewItem
                    Content="タイトル一覧"
                    Icon="{ui:FontIcon Glyph=&#xE8F1;}"
                    Tag="TitlesPage" />
            </NavigationView.MenuItems>
            <Frame x:Name="_ContentFrame" Margin="0,30,0,0" />
            <!--  Margin="0,47,0,0"  -->
        </NavigationView>
    </Grid>

</controls:Shell>
