<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Archivum.Pages.AuthorsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Archivum.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Archivum.ViewModels"
    xmlns:views="using:Archivum.Views"
    d:DataContext="{d:DesignInstance Type=local:AuthorsPage}"
    NavigationCacheMode="Enabled "
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0">
            <AppBarButton
                Command="{x:Bind RefreshCommand}"
                Icon="Refresh"
                Label="再読み込み" />
        </CommandBar>

        <Grid Grid.Row="1">
            <GridView ItemsSource="{x:Bind Model.Authors}" SelectionMode="Single">
                <GridView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource DefaultGridViewItemStyle}" TargetType="GridViewItem">
                        <Setter Property="Margin" Value="4,4,4,4" />
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:AuthorViewModel">
                        <views:AuthorView />
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Margin="4" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </Grid>
    </Grid>
</Page>
