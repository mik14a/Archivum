<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Archivum.Pages.MangasPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Archivum.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Archivum.ViewModels"
    xmlns:views="using:Archivum.Views"
    x:Name="_Page"
    d:DataContext="{d:DesignInstance Type=local:MangasPage}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0">
            <AppBarButton
                Command="{x:Bind RefreshCommand}"
                Icon="Refresh"
                Label="再読み込み" />
        </CommandBar>

        <Grid Grid.Row="1">
            <GridView ItemsSource="{x:Bind Model.Mangas}" SelectionMode="Single">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodel:MangaViewModel">
                        <views:MangaView />
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
        </Grid>
    </Grid>

</Page>
