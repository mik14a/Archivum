<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="Archivum.Views.MangaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Archivum.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Archivum.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Archivum.ViewModels;assembly=Archivum.Core"
    d:DataContext="{d:DesignInstance Type=viewmodel:MangaViewModel}"
    mc:Ignorable="d">

    <Grid.Resources>
        <controls:ImageSourceConverter x:Key="ImageSourceConverter" />
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="160" />
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
    </Grid.RowDefinitions>
    <Image Grid.Row="0" Source="{Binding Image, Converter={StaticResource ImageSourceConverter}}" />
    <StackPanel
        Grid.Row="1"
        Orientation="Horizontal"
        Spacing="4">
        <TextBlock Text="{Binding Title}" />
        <TextBlock Text="{Binding Volume}" />
    </StackPanel>
    <StackPanel Grid.Row="2" Spacing="4">
        <TextBlock Text="{Binding Author}" />
    </StackPanel>
    <StackPanel
        Grid.Row="3"
        Orientation="Horizontal"
        Spacing="4">
        <TextBlock Text="{Binding Created}" />
        <TextBlock Text="{Binding Size}" />
    </StackPanel>

</Grid>
